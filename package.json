/* Reset básico */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Arial, sans-serif;
}

body {
  background-color: #f4f4f9;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Encabezado */
.header {
  text-align: center;
  background-color: #1e3a5f;
  color: #ffffff;
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 10px;
  width: 90%;
  max-width: 1200px;
}

.docente-info {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-top: 10px;
}

.docente-info input {
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

/* Contenedor principal */
.container {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 10px;
  width: 90%;
  max-width: 1200px;
}

.box {
  background-color: #e8f0ff;
  border: 2px solid #1e3a5f;
  padding: 10px;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.box label {
  font-weight: bold;
  color: #1e3a5f;
}

textarea {
  border: 1px solid #ccc;
  border-radius: 5px;
  resize: none; /* Evita el redimensionamiento manual */
  overflow: hidden; /* Elimina el scroll */
  min-height: 40px; /* Altura mínima */
  padding: 5px;
  font-size: 1rem;
}

.horizontal {
  grid-column: span 5;
}

/* Botones */
.buttons {
  margin: 20px;
}

button {
  background-color: #1e3a5f;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 1rem;
}

button:hover {
  background-color: #15436b;
}
